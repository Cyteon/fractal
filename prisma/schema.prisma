generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "esm"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String
  admin     Boolean @default(false)
  suspended Boolean @default(false)
  tokens    Token[]

  orgMemberships  OrgMember[]
  auditLogEntires AuditLogEntry[]
}

model Token {
  token     String   @id
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

model OrgMember {
  id        String   @id @default(uuid())
  userId    String
  orgId     String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  org  Org  @relation(fields: [orgId], references: [id])
}

enum BillingType {
  SUBSCRIPTION
  CREDITS
  NONE
}

model EnterpriseContact {
  id    String  @id @default(uuid())
  orgId String
  name  String
  email String
  phone String?
  role  String?

  org Org @relation(fields: [orgId], references: [id])
}

model Org {
  id              String       @id @default(uuid())
  name            String
  slug            String       @unique
  billingType     BillingType  @default(NONE)
  polarCustomerId String?

  // for subscription-based billing
  subcriptionMadeByUserId String?
  subscriptionCreatedAt   DateTime?
  subscriptionId          String?

  // for credits-based billing
  customerMeterId String?

  // metadata, required for subscription-based billing
  // optional otherwise
  phoneNumber     String?
  website         String?
  countryCode     String?
  state           String? // if US
  legalEntityName String?

  members           OrgMember[]
  auditLogEntires   AuditLogEntry[]
  enterpriseContacts EnterpriseContact[]
}

model AuditLogEntry {
  id            String   @id @default(uuid())
  orgId         String
  userId        String
  action        String
  humanReadable String   @default("No description was found, for more information please contact support")
  type          String
  createdAt     DateTime @default(now())

  org  Org  @relation(fields: [orgId], references: [id])
  user User @relation(fields: [userId], references: [id])
}